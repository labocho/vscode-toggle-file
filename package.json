{
	"name": "toggle-file",
	"displayName": "Toggle file",
	"description": "Add \"Toggle file\" command that toggles file between eg. test and tested file.",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.toggleFile"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [{
			"command": "extension.toggleFile",
			"title": "Toggle file"
		}],
		"configuration": {
			"type": "object",
			"title": "Toggle file rules",
			"properties": {
				"toggleFile.rules": {
					"type": "array",
					"default": [
						{
							"from": "app/(.+).rb",
							"to": "spec/$1_spec.rb"
						},
						{
							"from": "script/(.+).rb",
							"to": "spec/script/$1_spec.rb"
						},
						{
							"from": "lib/(.+).rb",
							"to": "spec/$1_spec.rb"
						},
						{
							"from": "spec/(controllers|decorators|helpers|jobs|mailers|models|uploaders|validators|views)/(.+)_spec.rb",
							"to": "app/$1/$2.rb"
						},
						{
							"from": "spec/script/(.+)_spec.rb",
							"to": "script/$1.rb"
						},
						{
							"from": "spec/(.+)_spec.rb",
							"to": "lib/$1.rb"
						}
					]
				}
			}
		},
		"keybindings": [
			{
				"command": "extension.toggleFile",
				"key": "alt+ctrl+down",
				"mac": "alt+cmd+down"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"publisher": "labocho",
	"repository": {
		"type": "git",
		"url": "https://github.com/labocho/vscode-toggle-file.git"
	}
}
